<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin10"
    android:foreground="@drawable/card_foreground"
    app:cardCornerRadius="@dimen/margin3"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:elevation="@dimen/margin5">

    <RelativeLayout
        android:id="@+id/item_alarm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/layout_content_al"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin3"
                    android:text="设备名称："
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt15" />

                <TextView
                    android:id="@+id/device_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:padding="@dimen/margin3"
                    tools:text="内部机房空调01"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin3"
                    android:text="设备地址："
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt15" />

                <TextView
                    android:id="@+id/device_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:padding="@dimen/margin3"
                    tools:text="河北省保定市天河机房01"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin3"
                    android:text="设备状态："
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt15" />

                <TextView
                    android:id="@+id/device_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:padding="@dimen/margin3"
                    tools:text="内部空调温度过高告警"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin3"
                    android:text="所在机房："
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt15" />

                <TextView
                    android:id="@+id/device_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:padding="@dimen/margin3"
                    tools:text="这里是个一个备注"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt15" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>