<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textViewStyle">@style/titleStyle</item>

    </style>
    <!--<item name="android:titleTextStyle">@style/titleStyle</item>-->

    <style name="titleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt16</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- toolbar的字体大小 -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/txt16</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ToolBarStyle" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="common_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/common_btn_height_small</item>
        <item name="android:minWidth">@dimen/common_btn_width</item>
        <item name="android:padding">@dimen/margin10</item>
        <item name="android:textSize">@dimen/txt14</item>
    </style>

    <style name="common_btn_green_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/common_btn_height_small</item>
        <item name="android:minWidth">@dimen/common_btn_width</item>

        <item name="android:padding">@dimen/margin8</item>
        <item name="android:background">@drawable/bg_green_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt14</item>
    </style>

    <!-- 详情页按钮样式 -->
    <style name="detail_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin12</item>
        <item name="android:background">@drawable/bg_green_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt15</item>
    </style>


    <!-- 详情页状态的title样式 -->
    <style name="detail_status_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">@dimen/margin10</item>
        <item name="android:paddingLeft">@dimen/margin15</item>
        <item name="android:paddingTop">@dimen/margin10</item>
        <item name="android:paddingRight">@dimen/margin5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt15</item>
    </style>

    <!-- 详情页状态的value样式 -->
    <style name="detail_status_value_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/margin10</item>
        <item name="android:paddingLeft">@dimen/margin10</item>
        <item name="android:paddingTop">@dimen/margin10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt15</item>
    </style>

    <!-- 详情页某个模块的横向tab样式 -->
    <style name="detail_status_gray_tab_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/gray</item>
        <item name="android:paddingBottom">@dimen/margin10</item>
        <item name="android:paddingLeft">@dimen/margin10</item>
        <item name="android:paddingTop">@dimen/margin10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt16</item>
    </style>


    <!-- tablayout的字体样式 -->
    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/txt16</item>
    </style>


    <style name="divide_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/bg_gray</item>

    </style>

    <!-- fab样式 -->
    <style name="fab_common_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingTop">@dimen/margin10</item>
        <item name="android:layout_margin">@dimen/margin10</item>
        <item name="android:src">@mipmap/icon_search_big</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 百度地图 点聚合 -->
    <style name="ClusterIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>

    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>


    <!-- mac 编辑框的样式 -->
    <style name="edit_mac">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/txt14</item>
        <item name="android:minWidth">@dimen/margin90</item>
        <item name="android:layout_marginRight">@dimen/margin5</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/margin10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:digits">0123456789abcdefABCDEF-</item>
    </style>


    <!-- 页面tv的内容的样式 -->
    <style name="edit_pulldown">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/margin3</item>
        <item name="android:drawableRight">@mipmap/ic_pulldown</item>
        <item name="android:textSize">@dimen/txt14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginRight">@dimen/margin5</item>
        <item name="android:singleLine">true</item>
        <item name="android:minWidth">@dimen/margin90</item>
        <item name="android:padding">@dimen/margin10</item>
        <item name="android:background">@drawable/bg_edittext</item>
    </style>


    <!--  radioButton  for tab -->
    <style name="rb_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:padding">@dimen/margin12</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:background">@drawable/btn_tab_selector</item>
        <item name="android:textSize">@dimen/txt14</item>
    </style>

    <!--  radioButton for choose item -->
    <style name="rb_choose_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingBottom">@dimen/margin8</item>
        <item name="android:paddingTop">@dimen/margin8</item>
        <item name="android:paddingLeft">@dimen/margin10</item>
        <item name="android:paddingRight">@dimen/margin10</item>
        <item name="android:textColor">@drawable/txt_white_gray_selector</item>
        <item name="android:background">@drawable/rb_green_selector</item>
        <item name="android:textSize">@dimen/txt14</item>
    </style>

    <!--  radioButton common -->
    <style name="switch_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:switchMinWidth">@dimen/margin55</item>
        <item name="android:layout_marginRight">@dimen/margin5</item>
        <item name="android:switchPadding">@dimen/margin10</item>
        <item name="android:textSize">@dimen/txt12</item>
    </style>



    <!-- 页面tv的名称的样式 -->
    <style name="txt_page_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">@dimen/txt14</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/margin8</item>
        <item name="android:textColor">@color/black_light</item>

    </style>

    <!-- 页面tv的内容的样式 -->
    <style name="txt_page_content">
        <item name="android:textSize">@dimen/txt14</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/margin10</item>
        <item name="android:textColor">@color/black</item>

    </style>


</resources>
